pipeline {
    agent any 
     options {
          skipDefaultCheckout true
}
    stages {
        stage('Build') { 
            steps {
            catchError(message:'If build fails iw want to continue nextstages') {
              bat "Hello world" 
            }
            }
        }
        stage('Test') { 
            steps {
               echo "Hello world" 
            }
        }
        stage('Deploy') { 
            steps {
                echo "Hello world" 
            }
        }
    }
}
